@model GestionBibliotheque_TP.Models.Abonne

<div class="container">
    <div id="formDiv" class="form-container">
        <!-- Formulaire pour modifier un abonné -->
        <form id="editForm" asp-action="EditAbonne" method="post">
            <input type="hidden" asp-for="Id" />

            <h1 class="page-title">Modifier l'Abonne</h1>
            <!-- Champs du formulaire -->
            <div class="form-group">
                <label asp-for="Nom" class="control-label white-text">Nom :</label>
                <input asp-for="Nom" class="form-control red-border white-text" required />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label white-text">Prenom :</label>
                <input asp-for="Prenom" class="form-control red-border white-text" required />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            
            <br />
            <button type="submit" style="background-color: red; border-color: white;" class="btn btn-success">Enregistrer</button>
        </form>
    </div>
</div>

<style>
    .form-container {
        margin-left: 200px;
        position: relative;
        top: -650px;
        overflow-y: hidden;
    }

    .page-title {
        text-align: center;
        font-weight: bold;
        margin-right: 120px;
        margin-bottom: 40px;
    }

    .red-border {
        border: 2px solid red;
    }

    .white-text {
        color: white;
    }
</style>
