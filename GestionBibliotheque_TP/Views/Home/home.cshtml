                        <h1 class=" mb-4">Bebliomate est une application de gestion de bibliothèque moderne
                            et intuitive conçue pour simplifier et améliorer la gestion des collections de 
                            livres. Que vous soyez responsable d'une petite bibliothèque locale, 
                            d'une bibliothèque scolaire ou d'une grande médiathèque, Bebliomate
                            est l'outil idéal pour optimiser vos opérations.</h1>
                        <div>
                            
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                    <div class="h-100">
                        <img class="img-fluid h-100" src="/img/beb.jpeg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Team Start -->
    <div id= "Bebliotheque" class="container-xxl py-5">
        <div class="container">
            <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                <p class="d-inline-block bg-secondary text-primary py-1 px-4">Notre BeblioMate</p>
                <h1 class="text-uppercase">Explorer notre BeblioMate</h1>
            </div>

            @if (Model.Item2 != null && Model.Item2.Any())
        {
                <div class="row">
            @foreach (var livre in Model.Item2)
            {
               
                        <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                            <div class="team-item">
                                <div class="team-img position-relative overflow-hidden">
                                    <img class="img-fluid" src="@((livre.ImagePath != null) ? livre.ImagePath : "/img/book-placeholder.jpg")" alt="Book Image" style="max-width: 250px; max-height: 250px;">
                                </div>
                                <div class="bg-secondary text-center p-4">
                                    <h5 class="text-uppercase">@livre.Titre</h5>
                                    <p>Auteur: @livre.Auteur</p>
                                    <p>
                                        Statut: @if (livre.EstEmprunte)
                                        {
                                            <span class="text-danger">Emprunté</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Disponible</span>
                                        }
                                    </p>
                                    <div>
                                        @if (!livre.EstEmprunte)
                                        {
                                            <form method="get" asp-controller="Emprunt" asp-action="CreateEmprunt">
                                                <input type="hidden" name="livreId" value="@livre.Id" />
                                                <button type="submit" style="background-color: red; border-color: white; color: black; font-weight: bold;border-radius: 5px; padding: 6px 18px;" class="btn btn-success">Emprunter</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <p>Livre déjà emprunté</p>
                                            <a href="@Url.Action("RestituerLivre", new { id = livre.Id })" style="display: inline-block; background-color: red; border: 2px solid white; color: black;border-radius: 5px; padding: 6px 20px;  font-weight: bold;">Restituer</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No data available.</p>
            }


    <!-- Team End -->
    
    <!-- Testimonial Start -->
            <div id="commentaire" class="container-xxl py-5">
                <div class="container">
                    <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                        <p class="d-inline-block bg-secondary text-primary py-1 px-4">Témoignage</p>
                        <h1 class="text-uppercase">Ce que disent nos abonnes !</h1>
                    </div>
                    <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">
                        @if (Model.Item1 != null && Model.Item1.Any())
                        {
                            @foreach (var comment in Model.Item1)
                            {
                                <div class="testimonial-item text-center" data-dot="<img class='img-fluid' src='@comment.ImagePath' alt=''>">
                                    <h4 class="text-uppercase">@comment.Nom</h4>
                                    <p class="text-primary">@comment.Profession</p>
                                    <span class="fs-5">@comment.CommentText</span>
                                </div>
                            }
                        }
                        else
                        {
                            <p>No data available.</p>
                        }
                    </div>
                </div>
            


                    </div>
                </div>
            </div>
